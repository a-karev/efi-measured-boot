#! /bin/bash

cmd=$0

inc_counter=
krel=
no_seal=
remove=
while getopts 'ik:rS' opt; do
    case "$opt" in
        i) inc_counter=1 ;;
        k) krel=$OPTARG ;;
        r) remove=1 ;;
        S) no_seal=1 ;;
        :) echo "$OPTARG requires an argument" >&2; exit 1;;
        ?) echo "unknown argument" >&2; exit 1;;
    esac
done
shift $((OPTIND-1))

[ -z "$remove" -o -n "$krel" ] || { echo "-r requires -k to be specified" >&2; exit 1; }

[ -r /etc/efi-measured-boot/config ] && . /etc/efi-measured-boot/config
if [[ $cmd = ./* ]]; then APPDIR=.; fi
. "${APPDIR:-.}"/functions
. "${APPDIR:-.}"/bash_functions

set -e

"$APPDIR"/emboot_install ${remove:+-r} ${krel:+-k "$krel"}
"$APPDIR"/emboot_update_efi_apps
"$APPDIR"/emboot_update_efi_boot_order
if [ -n "$inc_counter" ]; then
    echo "Incrementing monotonic counter" 1>&2
    increment_counter
fi
[ -z "$remove" -a -n "$no_seal" ] || "$APPDIR"/emboot_seal_key ${remove:+-r} ${krel:+-k "$krel"}
