#! /bin/bash

cmd=$0

inc_counter=
krel=
no_seal=
while getopts 'ik:S' opt; do
    case "$opt" in
        i) inc_counter=1 ;;
        k) krel=$OPTARG ;;
        S) no_seal=1 ;;
        :) echo "$OPTARG requires an argument" >&2; return 1;;
        ?) echo "unknown argument" >&2; return 1;;
    esac
done
shift $((OPTIND-1))

[ -r /etc/efi-measured-boot/config ] && . /etc/efi-measured-boot/config
if [[ $cmd = ./* ]]; then APPDIR=.; fi
. "${APPDIR:-.}"/functions
. "${APPDIR:-.}"/bash_functions

set -e

"$APPDIR"/emboot_install ${krel:+-k "$krel"}
"$APPDIR"/emboot_update_efi_apps
"$APPDIR"/emboot_update_efi_boot_order
if [ -n "$inc_counter" ]; then
    echo "Incrementing monotonic counter" 1>&2
    increment_counter
fi
[ -n "$no_seal" ] || "$APPDIR"/emboot_seal_key ${krel:+-k "$krel"}
